{
	"extends": "@walless/tsconfig/application.json",
	"include": [
		"index*.js",
		"src",
		"scripts"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"esModuleInterop": true,
		"lib": ["DOM", "ES2015", "WebWorker"],
		"types": ["chrome"],
		"typeRoots": ["./src/types"],
		"baseUrl": ".",
		"paths": {
			"components/*": [
				"./src/components/*"
			],
			"stacks/*": [
				"./src/stacks/*"
			],
			"screens/*": [
				"./src/screens/*"
			],
			"utils/*": [
				"./src/utils/*"
			],
			"state/*": [
				"./src/state/*"
			],
			"bridge/*": [
				"./src/bridge/*"
			]
		}
	}
}
