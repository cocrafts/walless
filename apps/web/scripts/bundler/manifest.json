{
	"manifest_version": 3,
	"name": "Walless",
	"version": "0.1.0",
	"description": "A versatile wallet for gamers & non-web3 users",
	"author": "https://walless.io",
	"content_security_policy": {
		"extension_pages": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'; frame-ancestors 'none';"
	},
	"icons": {
		"16": "favicon.png",
		"48": "favicon.png",
		"128": "favicon.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Open Walless"
	},
	"host_permissions": [
		"file://*/*",
		"http://*/*",
		"https://*/*"
	],
	"permissions": [
		"tabs",
		"activeTab",
		"clipboardWrite",
		"identity",
		"storage",
		"unlimitedStorage"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"js": [
				"content.js"
			],
			"matches": [
				"file://*/*",
				"http://*/*",
				"https://*/*"
			],
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["injection.js"],
			"matches": ["<all_urls>"]
		}
	]
}
